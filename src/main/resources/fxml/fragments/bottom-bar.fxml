<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.SplitPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="botAnchor" maxHeight="21.0" minHeight="21.0" prefHeight="21.0" prefWidth="970.0" styleClass="background-main" xmlns="http://javafx.com/javafx/null" xmlns:fx="http://javafx.com/fxml/1">
    <children>

        <HBox fx:id="hboxConsole" alignment="CENTER_LEFT" maxHeight="21.0" minHeight="21.0" prefHeight="21.0" styleClass="bot-hbox" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            <children>
                <Button fx:id="consoleBut" onAction="#showHideConsole" styleClass="top-button" text="%botConsole">
                    <padding>
                        <Insets bottom="2.0" left="3.0" right="3.0" top="2.0" />
                    </padding>
                    <HBox.margin>
                        <Insets left="3.0" />
                    </HBox.margin>
                </Button>
                <StackPane fx:id="consoleSeparator" maxWidth="2.0" minWidth="2.0" prefWidth="2.0" styleClass="bot-separator">
                    <HBox.margin>
                        <Insets left="3.0" right="3.0" />
                    </HBox.margin>
                </StackPane>
                <Button fx:id="taskBut" mnemonicParsing="false" onAction="#showHideTasks" styleClass="top-button" text="%botTasks">
                    <padding>
                        <Insets bottom="2.0" left="3.0" right="3.0" top="2.0" />
                    </padding>
                </Button>
                <Separator opacity="0.0" prefWidth="1.0" HBox.hgrow="ALWAYS">
                    <opaqueInsets>
                        <Insets />
                    </opaqueInsets>
                </Separator>
            <ComboBox fx:id="comboBox" maxHeight="19.0" minHeight="19.0" onAction="#onChangeLanguage" prefHeight="19.0" styleClass="combo-box-grey" />
            </children>
        </HBox>
    </children>
</AnchorPane>
